<validators>
	<field name="tbdoc.title">
		<field-validator type="requiredstring">
			<message>标题不能为空</message>
		</field-validator>
	</field>

	<field name="tbdoc.typevalue">
		<field-validator type="requiredstring">
			<message>类型不能为空</message>
		</field-validator>
	</field>	
	<field name="tbdoc.author">
		<field-validator type="requiredstring">
			<message>发布单位不能为空</message>
		</field-validator>
	</field>
	<!--  
	<field name="tbdoc.ptime">
		<field-validator type="requiredstring">
			<message>发布时间不能为空</message>
		</field-validator>
	</field>
	-->
	<field name="tbdoc.content">
		<field-validator type="required">
			<message>内容不能为空</message>
		</field-validator>
	</field>

</validators>