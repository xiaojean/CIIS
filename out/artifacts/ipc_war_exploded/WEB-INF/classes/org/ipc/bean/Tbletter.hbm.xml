<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.ipc.bean.Tbletter" table="tb_letter">
		<id name="id" type="java.lang.Integer" column="id">
			<generator class="increment"></generator>
		</id>
		<property name="title" type="java.lang.String" column="title"
			length="50">
		</property>
		<property name="email" type="java.lang.String" column="email"
			length="50">
		</property>
		<property name="uname" type="java.lang.String" column="uname"
			length="50">
		</property>
		<property name="sex" type="java.lang.String" column="sex" length="50"></property>
		<property name="mphone" type="java.lang.String" column="mphone" length="50"></property>
		<property name="content" type="java.lang.String" column="content" ></property>
		<property name="readtext" type="java.lang.String" column="readtext" length="50"></property>
		<property name="typekey" type="java.lang.String" column="typekey" length="50"></property>
		<property name="typevalue" type="java.lang.String" column="typevalue" length="50"></property>
		<property name="ptime" type="java.sql.Date" column="ptime"></property>
	</class>
</hibernate-mapping>